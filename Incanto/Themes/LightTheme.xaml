<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls ="clr-namespace:Incanto.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:IncantoControl}" BasedOn="{x:Null}">
        <Setter Property="Background" Value="{DynamicResource ResourceKey=light_background_base_solidbrush}"></Setter>
    </Style>

    <Style TargetType="{x:Type Grid}" BasedOn="{x:Null}">
        <Setter Property="Background" Value="{DynamicResource ResourceKey=light_background_base_solidbrush}"></Setter>
    </Style>

</ResourceDictionary>