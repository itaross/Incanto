<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls ="clr-namespace:Incanto.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="controls:LightButton">
        <Setter Property="Background" Value="{DynamicResource ResourceKey=dark_background_base}"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource ResourceKey=dark_foreground_base}"></Setter>
    </Style>
</ResourceDictionary>